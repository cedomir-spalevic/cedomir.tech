{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all build:css lint format:check typecheck --parallel build:app",
    "build:app": "remix build",
    "build:css": "tailwindcss -c ./styles/tailwind.config.js -o ./app/styles/base.css --minify",
    "dev": "run-p dev:*",
    "dev:app": "remix dev",
    "dev:css": "tailwindcss -c ./styles/tailwind.config.js -o ./app/styles/base.css --watch",
    "format": "prettier --write app/ content/ styles/",
    "format:check": "prettier --check app/ content/ styles/",
    "lint": "eslint app/ content/ styles/ --no-error-on-unmatched-pattern",
    "typecheck": "tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@balavishnuvj/remix-seo": "^1.0.2",
    "@github-docs/frontmatter": "^1.3.1",
    "@heroicons/react": "^1.0.6",
    "@octokit/rest": "^19.0.3",
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "@remix-run/vercel": "^1.7.6",
    "@vercel/node": "^2.6.3",
    "dayjs": "^1.11.3",
    "dompurify": "^2.4.0",
    "highlight.js": "^11.5.1",
    "isbot": "^3.5.0",
    "jsdom": "^20.0.1",
    "marked": "^4.0.17",
    "react": "^18.2.0",
    "react-18-image-lightbox": "^5.1.4",
    "react-dom": "^18.2.0",
    "redis": "^4.2.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@octokit/types": "^6.40.0",
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@serverless-guru/prettier-plugin-import-order": "^0.2.0",
    "@types/marked": "^4.0.7",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "tailwindcss": "^3.1.5",
    "tsx": "^3.9.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "prettier": {
    "importOrder": [
      "@<THIRD_PARTY_MODULES>",
      "<THIRD_PARTY_MODULES>",
      "~/(.*)$",
      "^[./]"
    ],
    "importOrderMergeDuplicateImports": true,
    "importOrderTypeImportsToTop": true
  },
  "lint-staged": {
    "*.{tsx,js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.{tsx,ts}": "bash -c 'npm run typecheck'"
  }
}
