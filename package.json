{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write ./",
    "format:check": "prettier --check ./",
    "lint": "next lint",
    "typecheck": "tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@github-docs/frontmatter": "^1.3.1",
    "@heroicons/react": "^1.0.6",
    "@octokit/rest": "^19.0.3",
    "@vercel/analytics": "^1.1.0",
    "@vercel/node": "^2.6.3",
    "dayjs": "^1.11.3",
    "dompurify": "^2.4.7",
    "highlight.js": "^11.8.0",
    "jsdom": "^20.0.3",
    "marked": "^4.0.17",
    "next": "^13.5.3",
    "react": "^18.2.0",
    "react-18-image-lightbox": "^5.1.4",
    "react-dom": "^18.2.0",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@octokit/types": "^6.40.0",
    "@serverless-guru/prettier-plugin-import-order": "^0.2.0",
    "@types/dompurify": "^3.0.3",
    "@types/highlight.js": "^10.1.0",
    "@types/jsdom": "^21.1.3",
    "@types/marked": "^4.0.7",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.0.3",
    "eslint": "^8.15.0",
    "eslint-config-next": "^13.5.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.31",
    "prettier": "^2.6.1",
    "puppeteer": "^21.3.8",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals"
    ]
  },
  "prettier": {
    "importOrder": [
      "@<THIRD_PARTY_MODULES>",
      "<THIRD_PARTY_MODULES>",
      "~/(.*)$",
      "^[./]"
    ],
    "importOrderMergeDuplicateImports": true,
    "importOrderTypeImportsToTop": true
  },
  "lint-staged": {
    "*.md": [
      "npm run format"
    ],
    "*.{tsx,js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.{tsx,ts}": "bash -c 'npm run typecheck'"
  }
}
